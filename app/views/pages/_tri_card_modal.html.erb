<a href="#tri-card-modal">[Card Name]</a>
<div id="tri-card-modal" class="modal-dialog">
  <div id="tri-card-container">
    <a href="#close-modal" id="close-tri-modal" class="close-modal">X</a>

    <div class="square">
      <div class="card-cell">
        <div class="table">
          <div id="tri-card-left" class="table-cell">
            <div class="tri-card-name">Card Left</div>
            <input type="text" name="tri-card-left" class="tri-card-input">
            <button class="toggle-answer">Show Answer</button>
            <div class="card-answer hidden"></div>
          </div>
        </div>
      </div>
    </div>

    <div class="square">
      <div class="card-cell">
        <div class="table">
          <div id="tri-card-mid" class="table-cell">
            <div class="tri-card-name">Card Name</div>
            <button class="slash-button">Slash</button>
          </div>
        </div>
      </div>
    </div>

    <div class="square">
      <div class="card-cell">
        <div class="table">
          <div id="tri-card-right" class="table-cell">
            [right side], textarea, toggle-answer
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
